{
  "compilerOptions": {
    "target": "ES2015",             // Target ECMAScript 2015 (or higher)
    "module": "commonjs",           // Keep this as "commonjs" for Node.js
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,           // Avoid checking types in node_modules
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
